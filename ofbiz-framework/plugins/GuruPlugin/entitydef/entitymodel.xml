    <title>Entity of GuruPlugin Component</title>
    <description>None</description>
    <copyright></copyright>
    <version></version>
    
    <entity entity-name="Department" package-name="org.apache.ofbiz.guruplugin" title="Department Table" >
    	<field name="DeptID" type="id"><description>Primary Key</description></field>
    	<field name="DeptName" type="name"></field>  
    	<prim-key field="DeptID"/>  	
    </entity>
    
    <entity entity-name="Employee" package-name="org.apache.ofbiz.guruplugin" title="Employee Table">
    	<field name="EmpID" type="id"><description>Primary Key</description></field>
    	<field name="EmpName" type="name"></field>
    	<field name="EmpSal" type="integer"></field>
    	
    	<field name="DeptID" type="id"></field>
    	<prim-key field="EmpID"/>
